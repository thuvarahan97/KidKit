<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:radius="10dp"/>

                    <stroke
                        android:width="1dp"
                        android:color="@color/colorPrimary"/>
                </shape>
            </item>

            <item>
                <bitmap android:gravity="center|right" android:tint="@color/colorPrimary" android:src="@drawable/dropdown_arrow"/>
            </item>
        </layer-list>
    </item>
</selector>